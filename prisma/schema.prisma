// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Use sqlite locally; switch later if you want. (Works with strings for JSON.)
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product {
  id          String   @id @default(cuid())
  title       String
  brand       String?
  category    String?
  priceCents  Int       @default(0)
  currency    String    @default("USD")
  productUrl  String?
  imageUrl    String
  inStock     Boolean   @default(true)
  sizes       String?     // JSON string
  colorLab    String      // JSON string of [{L,a,b,weight}]
  attributes  String?     // JSON string

  // Store JSON-ish structures as strings for max connector compatibility
  sizes       String?     // JSON string
  colorLab    String      // JSON string of [{L,a,b,weight}]
  attributes  String?     // JSON string

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
